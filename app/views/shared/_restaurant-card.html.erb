  <div class="card" style="background-image: linear-gradient(180deg,rgba(0,0,0,.5),transparent 50%,rgba(0,0,0,.8)), url('<%= cl_image_path resto.photo %>');">
  <div class="card-details">
    <div class="card-info">
      <p><%= resto.name %></p>
      <div class="restaurant-address">      <%= resto.address %>
</div>
    </div>
    <% if !session[:location].blank? && !resto.distance_from(session[:location], :km).nan? %>
      <div class="card-location-info">
        <i class="fas fa-map-marker-alt"></i>
        <p><%="#{m_or_km(resto.distance_from(session[:location], :km))} away" %></p>
      </div>
     <% else %>
     <p><%= resto.category %></p>
    <% end %>
  </div>
  </div>


