<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login">
        <%= image_tag "logo_form.svg", height: 70, class: "center" %>
        <h2>Welcome back!</h2>
        <h6>Let's log in, shall we?</h6>

         <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
           <div class="form-inputs">
             <%= f.input :email, required: false, autofocus: true, placeholder: "Your Email", label: false %>
             <%= f.input :password, required: false,placeholder: "Your Password", label: false %>
             <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
           </div>

           <div class="form-actions">
             <%= f.button :submit, "Log in", class: "button" %>
           </div>
         <% end %>

         <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
